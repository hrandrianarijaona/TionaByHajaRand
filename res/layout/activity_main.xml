<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="#E6E2AF">

		<TextView
		android:id="@+id/title_app"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:text="@string/app_name"
        android:textColor="#A16D39"
        android:textSize="60sp"
        android:textStyle="italic"/>

        <EditText
            android:id="@+id/number_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:layout_below="@+id/title_app"/>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Appuyer"
            android:layout_below="@+id/number_param"
            android:layout_centerHorizontal="true"/>

    <ScrollView
        android:id="@+id/btn_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_16"
                android:text="16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btn_428"
                android:text="428"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_512"
                android:text="512"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_ff16"
                android:text="ff16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_261"
                android:text="261"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_antema1"
                android:text="antema 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_115"
                android:text="115"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_266"
                android:text="266"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btn_122"
                android:text="122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>